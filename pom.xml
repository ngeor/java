<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                              http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.ngeor</groupId>
  <artifactId>java</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>java</name>
  <description>Parent pom for Java repository</description>
  <url>https://github.com/ngeor/java</url>
  <licenses>
    <license>
      <name>GPL-3.0</name>
      <url>https://opensource.org/licenses/GPL-3.0</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>Nikolaos Georgiou</name>
      <email>nikolaos.georgiou@gmail.com</email>
    </developer>
  </developers>
  <modules>
    <module>apps/bitbucket-pr-report</module>
    <module>apps/icqfriends</module>
    <module>apps/jCalendar</module>
    <module>apps/jcms</module>
    <module>apps/jDirDiff</module>
    <module>apps/jHangMan</module>
    <module>apps/jSpiderGame</module>
    <module>apps/jTetris</module>
    <module>apps/webtail</module>
    <module>apps/xmltrans</module>
    <module>apps/yak4j-cli</module>
    <module>apps/zfs-snapshot-trimmer</module>
    <module>libs/checkstyle-rules</module>
    <module>libs/yak4j-spring-test-utils</module>
    <module>libs/yak4j-utc-time-zone-mapper</module>
    <module>libs/yak4j-xml</module>
    <module>maven-archetypes/archetype-quickstart-jdk8</module>
    <module>maven-plugins/yak4j-bitbucket-maven-plugin</module>
    <module>maven-plugins/yak4j-filename-conventions-maven-plugin</module>
    <module>maven-plugins/yak4j-json-yaml-converter-maven-plugin</module>
    <module>maven-plugins/yak4j-swagger-maven-plugin</module>
    <module>maven-plugins/yak4j-sync-archetype-maven-plugin</module>
  </modules>
  <scm>
    <connection>scm:git:https://github.com/ngeor/java.git</connection>
    <developerConnection>scm:git:git@github.com:ngeor/java.git</developerConnection>
    <url>https://github.com/ngeor/java</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.commons</groupId>
        <artifactId>commons-lang3</artifactId>
        <version>3.12.0</version>
      </dependency>
      <dependency>
        <groupId>org.junit.jupiter</groupId>
        <artifactId>junit-jupiter</artifactId>
        <version>5.7.2</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.assertj</groupId>
        <artifactId>assertj-core</artifactId>
        <version>3.19.0</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-core</artifactId>
        <version>3.11.0</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-enforcer-plugin</artifactId>
          <version>3.0.0-M3</version>
          <executions>
            <execution>
              <goals>
                <goal>enforce</goal>
              </goals>
              <configuration>
                <rules>
                  <requireMavenVersion>
                    <version>3.6.3</version>
                  </requireMavenVersion>
                  <banDuplicatePomDependencyVersions></banDuplicatePomDependencyVersions>
                  <bannedDependencies>
                    <excludes>
                      <!--
                      TODO: we do not use junit 4
                      -->
                      <!--                      <exclude>junit</exclude>-->
                      <!--
                      we can't use this because it really needs junit 4
                      -->
                      <exclude>com.squareup.okhttp3:mockwebserver</exclude>
                    </excludes>
                  </bannedDependencies>
                </rules>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-checkstyle-plugin</artifactId>
          <version>3.1.2</version>
          <configuration>
            <configLocation>libs/checkstyle-rules/src/main/resources/com/github/ngeor/checkstyle.xml</configLocation>
            <includeTestSourceDirectory>true</includeTestSourceDirectory>
          </configuration>
          <dependencies>
            <dependency>
              <groupId>com.puppycrawl.tools</groupId>
              <artifactId>checkstyle</artifactId>
              <!-- TODO upgrade to latest -->
              <version>8.39</version>
            </dependency>
          </dependencies>
          <executions>
            <execution>
              <id>validate</id>
              <goals>
                <goal>check</goal>
              </goals>
              <phase>validate</phase>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>3.0.0-M5</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>3.1.2</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <version>3.2.0</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
